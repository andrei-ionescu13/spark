{
  "compilerOptions": {
    "baseUrl": "src",
    "paths": {
      "@/components/*": [
        "app/components/*"
      ],
      "@/contexts/*": [
        "app/contexts/*"
      ],
      "@/hooks/*": [
        "app/hooks/*"
      ],
      "@/types/*": [
        "app/types/*"
      ],
      "@/utils/*": [
        "app/utils/*"
      ],
      "@/icons/*": [
        "app/icons/*"
      ],
      "@/constants": [
        "app/constants"
      ],
      "@/api/*": [
        "api/*"
      ],
      "@/pages/*": [
        "pages/*"
      ]
    },
    "target": "ES6",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "noEmit": true,
    "noEmitOnError": true,
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}